#!/usr/bin/env bash
# This script does some stuff

delete() {
    rm /var/run/myscript.pid
    exit
}

echo "$$" > /var/run/myscript.pid

while :
  do
    echo "To infinity and beyond"
    sleep 2
    trap 'echo "Y U no love me?!"' SIGINT
    trap 'echo "I hate the kill command" && delete' SIGTERM
    trap 'delete' SIGQUIT
  done